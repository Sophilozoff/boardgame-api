{% extends 'base.html.twig' %}

{% block title %}Boardgame{% endblock %}

{% block body %}
    <h1>Boardgame</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ boardgame.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ boardgame.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ boardgame.image }}</td>
            </tr>
            <tr>
                <th>PlayersMin</th>
                <td>{{ boardgame.playersMin }}</td>
            </tr>
            <tr>
                <th>PlayersMax</th>
                <td>{{ boardgame.playersMax }}</td>
            </tr>
            <tr>
                <th>AverageTime</th>
                <td>{{ boardgame.averageTime }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('boardgame_index') }}">back to list</a>

    <a href="{{ path('boardgame_edit', {'id': boardgame.id}) }}">edit</a>

    {{ include('boardgame/_delete_form.html.twig') }}
{% endblock %}
